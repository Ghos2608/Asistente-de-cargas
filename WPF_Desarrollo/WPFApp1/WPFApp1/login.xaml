<Window x:Class="WPFApp1.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp1"
        mc:Ignorable="d"
        Title="Login"
        Height="450"
        Width="800"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black"/>
            <GradientStop Color="#FF4A0000" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="0,0,10,0">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="370" Height="414">
            <Grid.RowDefinitions>
                <RowDefinition Height="39*"/>
                <RowDefinition Height="41*"/>
            </Grid.RowDefinitions>
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF4A0000" Offset="1"/>
                    <GradientStop Color="Black" Offset="0"/>
                </LinearGradientBrush>
            </Grid.Background>


            <StackPanel Name="stackpanellogin" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,60,0,0" Grid.RowSpan="2">
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0.583"/>
                        <GradientStop Color="#FF4A0000" Offset="1"/>
                    </LinearGradientBrush>
                </StackPanel.Background>



                <Button Width="100" Height="100" IsHitTestVisible="False" BorderBrush="{x:Null}">
                    <Button.Background>
                        <ImageBrush ImageSource="/user-circle.png" Stretch="None"/>
                    </Button.Background>
                </Button>
                <Label Content="MATRICULA" Foreground="White" Width="226" Height="25"/>

                <TextBox x:Name="matriculaTextBox"
                         Width="250" 
                         Height="40" 
                         Margin="0,0,0,10" 
                         Padding="10"
                         BorderBrush="{x:Null}" 
                         BorderThickness="2"
                         Foreground="Black" 
                         FontSize="14" 
                         VerticalAlignment="Center" 
                         HorizontalAlignment="Center" >
                    <TextBox.Background>
                        <ImageBrush ImageSource="/barratext.png"/>
                    </TextBox.Background>
                </TextBox>
                <Label Content="CONTRASEÑA" Foreground="White" Width="226" Height="27"/>

                <PasswordBox x:Name="passwordBox" 
                             Width="250" 
                             Height="40" 
                             Margin="0,0,0,10" 
                             Padding="10" 
                             BorderBrush="{x:Null}" 
                             BorderThickness="2"
                             Foreground="Black" 
                             FontSize="14" 
                             VerticalAlignment="Center" 
                             HorizontalAlignment="Center">
                    <PasswordBox.Background>
                        <ImageBrush ImageSource="/barratext.png"/>
                    </PasswordBox.Background>
                </PasswordBox>

                <Button Content="Ingresar" 
                        Width="250" 
                        Height="40" 
                        Foreground="White"
                        BorderBrush="{x:Null}" 
                        BorderThickness="2" 
                        FontSize="16"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center" 
                        Click="Button_Click">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FF4A0000" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <Button Content="Login up" 
                        Width="250" 
                        Height="40" 
                        Foreground="White" 
                        BorderBrush="{x:Null}" 
                        BorderThickness="2" 
                        FontSize="14" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center" Click="Button_Click_1">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FF4A0000" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>
            <StackPanel x:Name="Stackloginup" Margin="46,42,46,6" Grid.RowSpan="2" Visibility="Collapsed" >
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0.583"/>
                        <GradientStop Color="#FF4A0000" Offset="1"/>
                    </LinearGradientBrush>
                </StackPanel.Background>
                <Label Content="MATRICULA" Foreground="White" Width="74"/>
                <TextBox x:Name="matriculaTextBox1"
                Width="250" 
                Height="40" 
                Padding="10"
                BorderBrush="{x:Null}" 
                BorderThickness="2"
                Foreground="Black" 
                FontSize="14" 
                >
                    <TextBox.Background>
                        <ImageBrush ImageSource="/barratext.png"/>
                    </TextBox.Background>
                </TextBox>
                <Label Content="MATRICULA" Foreground="White" Width="82"/>
                <TextBox 
                Width="250" 
                Height="40" 
                Padding="10"
                BorderBrush="{x:Null}" 
                BorderThickness="2"
                Foreground="Black" 
                FontSize="14" >
                    <TextBox.Background>
                        <ImageBrush ImageSource="/barratext.png"/>
                    </TextBox.Background>
                </TextBox>
                <Label Content="E-MAIL" Foreground="White" Width="49"/>
                <TextBox TextWrapping="Wrap" 
                     Width="248" 
                     Height="38" 
                     FontSize="14"
                     Padding="10"
                     BorderBrush="{x:Null}">
                    <TextBox.Background>
                        <ImageBrush ImageSource="/barratext.png"/>
                    </TextBox.Background>
                </TextBox>
                <Label Content="CONTRASEÑA" Foreground="White" Width="89"/>

                <PasswordBox x:Name="passwordBox1" 
                Width="250" 
                Height="40" 
                Margin="0,0,0,10" 
                Padding="10" 
                BorderBrush="{x:Null}" 
                BorderThickness="2"
                Foreground="Black" 
                FontSize="14" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center">
                    <PasswordBox.Background>
                        <ImageBrush ImageSource="/barratext.png"/>
                    </PasswordBox.Background>
                </PasswordBox>

                <Button Content="Ingresar" 
                Width="275" 
                Height="40" 
                Foreground="White"
                BorderBrush="{x:Null}" 
                BorderThickness="2" 
                FontSize="16" 
                HorizontalAlignment="Center" 
                Click="Button_Click">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FF4A0000" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button Content="Regresar" 
                        Width="281" Height="39"
                        Foreground="White" BorderBrush="{x:Null}" Click="Button_Click_2">
                    <Button.Background>
                        <LinearGradientBrush 
                            EndPoint="0.5,1" 
                            StartPoint="0.5,0"
                            >
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FF4A0000" Offset="0.594"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <Button 
                Width="250" 
                Height="40" 
                Foreground="White" 
                BorderBrush="{x:Null}" 
                BorderThickness="2" 
                FontSize="14" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" Background="{x:Null}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
